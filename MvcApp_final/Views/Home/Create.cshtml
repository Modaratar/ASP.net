@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using MvcApp.Models
@model MvcApp.Models.Passenger
<h2>Добавить пассажира в базу данных</h2>

<form asp-action="Create" asp-controller="home">
    <p>
        <label asp-for="Passenger_type">Тип пассажира</label><br />
        <select asp-for="Id_type_passenger" asp-items="ViewBag.Passenger_types"></select>
    </p>
    <p>
        <label asp-for="Passenger_name">ФИО пассажира</label><br />
        <input type="text" asp-for="Passenger_name" />
    </p>
    <p>
        <label asp-for="Passenger_age">Возраст пассажира</label><br />
        <input type="number" asp-for="Passenger_age" />
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>